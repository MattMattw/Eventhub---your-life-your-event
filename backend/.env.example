# Database
MONGODB_URI=mongodb://127.0.0.1:27017/eventhub

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=7d

# SMTP (set these to enable real email sending)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM="EventHub <noreply@example.com>"

# For local testing without SMTP, set a file path to capture outgoing emails
# Example: EMAIL_LOG_FILE=./emails_sent.json
EMAIL_LOG_FILE=

# CORS / Frontend
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Server
PORT=3000
NODE_ENV=development

# --- Mailtrap example (use these values if you create a Mailtrap inbox) ---
# MAILTRAP_HOST=smtp.mailtrap.io
# MAILTRAP_PORT=2525
# MAILTRAP_USER=your_mailtrap_user
# MAILTRAP_PASS=your_mailtrap_pass
