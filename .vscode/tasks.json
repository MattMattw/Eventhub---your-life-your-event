{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run server.js",
            "type": "shell",
            "command": "npm",
            "args": ["start"],
            "cwd": "${workspaceFolder}/backend",
            "isBackground": true,
            "options": {
                "shell": {
                    "executable": "${env:COMSPEC}",
                    "args": ["/c"]
                }
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Server is running.*",
                    "endsPattern": "^.*Error connecting.*"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "run frontend",
            "type": "shell",
            "command": "npm",
            "args": ["start"],
            "cwd": "${workspaceFolder}/frontend",
            "isBackground": true,
            "options": {
                "shell": {
                    "executable": "${env:COMSPEC}",
                    "args": ["/c"]
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
